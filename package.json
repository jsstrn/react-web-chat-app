{
  "name": "react-web-chat-app",
  "version": "1.0.0",
  "description": "A starter kit for building a socket.io based chat app with a frontend framwork",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev-start": "nodemon server.js",
    "build": "browserify -t [ babelify ] ./src/*.js -o ./dist/js/bundle.js",
    "dev-build": "watchify -t [ babelify ] ./src/*.js -o ./dist/js/bundle.js -d",
    "dev": "npm run dev-build & npm run dev-start",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeremiahalex/ff-chat-app.git"
  },
  "engines": {
    "node": "5.9.0"
  },
  "author": "JeremiahAlex",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jeremiahalex/ff-chat-app/issues"
  },
  "homepage": "https://github.com/jeremiahalex/ff-chat-app#readme",
  "dependencies": {
    "express": "^4.13.4",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "socket.io": "^1.4.5",
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "watchify": "^3.7.0"
  }
}
